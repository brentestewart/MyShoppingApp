@rendermode InteractiveServer
@page "/items/{Id:guid}"
@inherits ViewModelComponentBase<ItemDetailsViewModel>

<PageTitle>Item Details</PageTitle>

<h3>Item Details</h3>

@if (ViewModel.IsBusy)
{
    <p>Loading item details...</p>
}
else if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
{
    <div class="alert alert-danger">@ViewModel.ErrorMessage</div>
}
else if (ViewModel.Item is not null)
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">@ViewModel.Item.Name</h4>
            <p class="card-text">@ViewModel.Item.Description</p>
            <dl class="row">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@ViewModel.Item.Category</dd>
                <dt class="col-sm-3">Group</dt>
                <dd class="col-sm-9">@ViewModel.Item.GroupId</dd>
            </dl>
        </div>
    </div>
}
else
{
    <p>Item not found.</p>
}

<a href="/items">Back to Item List</a> 